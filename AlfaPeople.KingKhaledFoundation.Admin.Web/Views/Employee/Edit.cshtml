@model AlfaPeople.KingKhaledFoundation.Admin.Web.Models.EmployeeVM

@{
    Layout = null;
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit", "Employee", FormMethod.Post, new { onSubmit = "return jQueryAjaxPost(this);", data_restUrl = Url.Action("Index", "Employee", new { id = 0 }) }))//data-resetUrl
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model._BackEndUser.BackendUserID)
            @Html.HiddenFor(model => model._BackEndUser.CreateDate)
            @Html.HiddenFor(model => model._BackEndUser.FK_AspUser)
            @Html.HiddenFor(model => model._BackEndUser.AspNetUser.UserName)
            <div class="form-group">
                @Html.LabelFor(model => model._BackEndUser.UserName, htmlAttributes: new { @class = "bmd-label-floating" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model._BackEndUser.UserName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model._BackEndUser.UserName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model._BackEndUser.AspNetUser.Email, htmlAttributes: new { @class = "bmd-label-floating" })
