                    @Html.EditorFor(model => model._BackEndUser.AspNetUser.Email, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model._BackEndUser.AspNetUser.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model._BackEndUser.Password, htmlAttributes: new { @class = "bmd-label-floating" })
