
@model List<AlfaPeople.KingKhaledFoundation.Admin.Web.Models.BaselineSurveyReportVM>
@{
    ViewBag.Title = Resources.General.BaselineRequestReport;
    var lang = ViewBag.lang ?? 1;
    bool isArabic = ViewBag.lang == 3;
}
<style>
    #reportTable thead th {
        position: sticky;
        top: 0;
        background-color: #fff;
        z-index: 10;
    }

</style>
<link href="~/Content/chosen.min.css" rel="stylesheet" />
<link href="~/assets/css/FileUploaderStyle.css" rel="stylesheet" />
<link href="~/Content/chosen.min.css" rel="stylesheet" />
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card mt-3">
                    <div class="card-header card-header-rose card-header-text">
                        <div class="card-text">
                            <h4 class="card-title">    @Resources.General.BaselineRequestReport</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="material-datatables" style="overflow-x: auto; overflow-y: auto; max-height: 1000px;">
                            <table class="table table-striped table-bordered table-hover" id="reportTable" width="100%" cellspacing="0" >
                                <thead>
                                    <tr>
                                        <th>@Resources.IncubationWorkshops.OrganizationName</th>
                                        <th>@Resources.General.Region</th>
                                        <th>@Resources.General.Governorate</th>
                                        <th>@Resources.Cities.City</th>
                                        <th>@Resources.IncubationWorkshops.Status</th>
                                        <th>@Resources.IncubationWorkshops.SubmissionDate</th>
                                        <th>@Resources.IncubationWorkshops.Note</th>

                                        <th>@Resources.IncubationRequest.OrganizationEstablishedFor</th>
                                        <th>@Resources.IncubationRequest.History</th>
                                        <th>@Resources.IncubationRequest.Vision</th>
                                        <th>@Resources.IncubationRequest.Mission</th>
                                        <th>@Resources.IncubationRequest.Objectives</th>
                                        <th>@Resources.IncubationRequest.HowTheStratgicPlanDeveloped</th>
                                        <th>@Resources.IncubationRequest.PleaseAttachTheStrategicPlan</th>
                                        <th>@Resources.IncubationRequest.PleaseAttachThisYearOperatingPlan</th>
                                        <th>@Resources.IncubationRequest.DoesTheOrganztionHaveAnStratgicObject</th>

                                        <th>@Resources.IncubationRequest.HowManyBoardMembers</th>
                                        <th>@Resources.IncubationRequest.DateOfBoardApproval</th>
                                        <th>@Resources.IncubationRequest.PleaseAttachAGovernmentGuide</th>
                                        <th>@Resources.IncubationRequest.BoardMemmbersRoles</th>
                                        <th>@Resources.IncubationRequest.BoarderMemmbersMeetings</th>
                                        <th>@Resources.IncubationRequest.BoardMemmbersRolesForOrganiziation</th>





                                        @*<th>@Resources.IncubationRequest.IsThereIsSpecializeDepartmentForFinancialResources</th>*@
                                        <th>@Resources.IncubationRequest.HowManyEmployees</th>
                                        <th>@Resources.IncubationRequest.VolumeOfOrganizationRevenue</th>
                                        <th>@Resources.IncubationRequest.NumberOfFinanceSupporter</th>
                                        <th>@Resources.IncubationRequest.NumberOfDonors</th>
                                        <th>@Resources.IncubationRequest.PleaseIndicateNumberDonors</th>
                                        <th>@Resources.IncubationRequest.OrganzationBudget</th>
                                        <th>@Resources.IncubationRequest.CharteredAccountantNotes</th>

                                        <th>@Resources.IncubationRequest.SpecializedForProgramsAndProjects</th>
                                        <th>@Resources.IncubationRequest.count</th>
                                        <th>@Resources.IncubationRequest.organizationStratgicObjectvies</th>
                                        <th>@Resources.IncubationRequest.organizationStratgicObjectviesAndImplements</th>
                                        <th>@Resources.IncubationRequest.IndicateDevelopmentProjects</th>
                                        <th>@Resources.IncubationRequest.ProjectAllocatedBudget</th>
                                        <th>@Resources.IncubationRequest.ProjectAllocatedBudgetAmount</th>
                                    
                                        <th>@Resources.IncubationRequest.SpecializedForEvalutionAndMonitoring</th>
                                        <th>@Resources.IncubationRequest.count</th>
                                        <th>@Resources.IncubationRequest.FollowUpAndEvaluationProjectsAndPrograms</th>
                                        <th>@Resources.IncubationRequest.FollowUpAndEvaluationImplentation</th>
                                        <th>@Resources.IncubationRequest.FollowUpAndEvaluationAttachment</th>

                                        <th>@Resources.IncubationRequest.SpecializedInRelationAndMedia</th>
                                        <th>@Resources.IncubationRequest.CommunicationPlan</th>
                                        <th>@Resources.IncubationRequest.SeparateBudgetOfCorprateCommunication</th>
                                        <th>@Resources.IncubationRequest.BudgetOfCorprateCommunication</th>


                                        <th>@Resources.IncubationRequest.HRSpecializedDepartment</th>
                                        <th>@Resources.IncubationRequest.count</th>
                                        <th>@Resources.IncubationRequest.FullTimeStaff</th>
                                        <th>@Resources.IncubationRequest.PartTimeStaff</th>
                                        <th>@Resources.IncubationRequest.VolunteerStaff</th>
                                        <th>@Resources.IncubationRequest.HowToAttractEmployees</th>
                                        <th>@Resources.IncubationRequest.HowStaffPerformanceIsMonitored</th>
                                        <th>@Resources.IncubationRequest.HROrganizationStructure</th>
                                        <th>@Resources.IncubationRequest.IdentfiyTrainingNeeds</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@item.CorporationName</td>
                                        <td>@item.Region</td>
                                        <td>@item.Governorate</td>
                                        <td>@item.City</td>
                                        <td>@item.StatusName</td>
                                        <td>@item.SubmissionDateText</td>
                                        <td>@item.Feadback</td>

                                        <td>@item.ReasonEstablishingCorporate</td>
                                        <td>@item.History</td>
                                        <td>@item.Vision</td>
                                        <td>@item.Mission</td>
                                        <td>@item.Objectives</td>
                                        <td>@item.HowPlanMade</td>
                                        <td>@item.StrategicPlan</td>
                                        <td>@item.OperatingPlan</td>
                                        <td>@item.StrategicObjective</td>

                                        <td>@item.BoardDirectorsCount</td>
                                        <td>@(item.DateBoardApproval?.ToString("yyyy-MM-dd"))</td>
                                        <td>@item.GovernanceGuide</td>
                                        <td>@(item.InternalRegulation ? "نعم" : "لا")</td>
                                        <td>@item.BoardMeetingNumber</td>
                                        <td>@item.BoardDirectorRoles</td>

                                        <td>@item.FRDevSpecialistsCount</td>
                                        <td>@item.CorporateRevenuesLastYear</td>
                                        <td>@item.SupportersCountLastYear</td>

                                        <td>
                                            @(item.DonorInstitutions ? (isArabic ? "مؤسسات مانحة، " : "Donor Institutions, ") : "")
                                            @(item.GovernmentAgencies ? (isArabic ? "جهات حكومية، " : "Government Agencies, ") : "")
                                            @(item.PrivateSector ? (isArabic ? "القطاع الخاص، " : "Private Sector, ") : "")
                                            @(item.Individuals ? (isArabic ? "أفراد، " : "Individuals, ") : "")
                                            @(item.Investments ? (isArabic ? "استثمارات، " : "Investments, ") : "")
                                            @(item.Alms ? (isArabic ? "زكاة، " : "Alms, ") : "")
                                        </td>

                                        <td>@item.IndicateNumberAndSupportAmount</td>
                                        <td>@item.CurrentCorporateBudget</td>
                                        <td>@item.CharteredAccountantNotesCount</td>


                                        <td>@(item.specializedPandPDepartmentEmpCount.HasValue && item.specializedPandPDepartmentEmpCount > 0 ? (isArabic ? "نعم" : "Yes") : (isArabic ? "لا" : "No"))</td>
                                        <td>@item.specializedPandPDepartmentEmpCount</td>
                                        <td>@(item.PlanAccordingStrategicObjectives ? "نعم" : "لا")</td>
                                        <td>@item.PlanImplementationActivitiesParticipationClarify</td>
                                        <td>@item.IndicateDevelopmentProjectsWorkingOrganization</td>
                                        <td>@item.BudgetAllocatedProjects</td>
                                        <td>@item.BudgetAllocatedOperation</td>


                                        <td>@(item.DepartmentFollowUpEvaluationEmpCount.HasValue && item.DepartmentFollowUpEvaluationEmpCount > 0 ? (isArabic ? "نعم" : "Yes") : (isArabic ? "لا" : "No"))</td>
                                        <td>@item.DepartmentFollowUpEvaluationEmpCount</td>
                                        <td>@(item.OrganizationFollowUpEvaluationPlan ? "نعم" : "لا")</td>
                                        <td>@(item.OrganizationFollowUpEvaluationReports ? "نعم" : "لا")</td>
                                        <td>@item.AttachFollowUpandEvaluationForms</td>

                                        <td>@item.DepartmentCorporateCommunicationPublicRelationsEmpCount</td>
                                        <td>@(item.CorporateCommunicationPlan ? "نعم" : "لا")</td>
                                        <td>@(item.SeparateItemGeneralBudget ? "نعم" : "لا")</td>
                                        <td>@item.BudgetAllocatedCorporateCommunication</td>


                                        <td>@(item.DepartmentHREmpCount.HasValue && item.DepartmentHREmpCount > 0 ? (isArabic ? "نعم" : "Yes") : (isArabic ? "لا" : "No"))</td>
                                        <td>@item.DepartmentHREmpCount</td>
                                        <td>@item.FullTimeStaff</td>
                                        <td>@item.PartTimeStaff</td>
                                        <td>@item.VolunteerStaff</td>
                                        <td>@item.AttractEmployees</td>
                                        <td>@item.StaffPerformanceMonitored</td>
                                        <td>@item.OrganizationalStructureUnderHRManagement</td>
                                        <td>@item.TrainingNeedsCorporateStaffIdentified</td>

                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3">


                            <a href="@Url.Action("ExportBaselineSurveyToExcel", "IncubationBaselineRequest")" target="_blank" class="btn btn-success">
                                @Resources.CorporationsReport.Export
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#reportTable').DataTable({
                ordering: true,
                searching: true,
                paging: true,
                info: true,
                language: {
                    search: "بحث:",
                    lengthMenu: "عرض _MENU_ سجلات لكل صفحة",
                    info: "عرض _START_ إلى _END_ من أصل _TOTAL_ سجلات",
                    paginate: {
                        next: "التالي",
                        previous: "السابق"
                    }
                }
            });
        });
    </script>
}
