<!-- Content -->
@*<div class="content">*@
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="card">
                @*<div class="card-header">
                        <h4 class="card-title">Collapsible Accordion</h4>
                    </div>*@
                <div class="card-body">
                    <div id="accordion" role="tablist">
                        <div class="card-collapse">
                            <div class="card-header" role="tab" id="headingOne">
                                <h5 class="mb-0">
                                    <a data-toggle="collapse" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne" class="collapsed">
                                        @Resources.FollowUpProjectPlan.FollowUpProjectPlanDetails
                                        <i class="material-icons">keyboard_arrow_down</i>
                                    </a>
                                </h5>
                            </div>
                            <div id="collapseOne" class="collapse show" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion" style="">
                                <div class="card-body ">
                                    <br />
                                    <div class="row justify-content-center">
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label for="FollowUpProjectPlan_Name" class="bmd-label-floating">@Resources.FollowUpProjectPlan.Name</label>
                                                <input type="text" id="Inp_GrantModel" name="FollowUpProjectPlan_Name" value="@Model.FollowUpProjectPlan.Name" class="form-control" disabled="disabled" />
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label for="FollowUpProjectPlan_IncubationWorkshop_Name" class="bmd-label-floating">@Resources.FollowUpProjectPlan.WorkShop</label>
                                                <input type="text" id="Inp_GrantModel" name="FollowUpProjectPlan_IncubationWorkshop_Name" value="@Model.FollowUpProjectPlan.IncubationWorkshop.Name" class="form-control" disabled="disabled" />

                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label for="FollowUpProjectPlan_Deadline"> @Resources.FollowUpProjectPlan.Deadline </label>
                                                <input type="text" id="Inp_GrantModel" name="FollowUpProjectPlan_Deadline" value="@Model.FollowUpProjectPlan.Deadline.ToString("yyyy/MM/dd")" class="form-control" disabled />
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label for="Notes" class="bmd-label-floating">@Resources.FollowUpProjectPlan.Notes</label>
                                                <textarea id="Inp_Notes" name="FollowUpProjectPlan_Notes" class="form-control" rows="3" disabled>@Model.FollowUpProjectPlan.Notes</textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row justify-content-center">
                                        <div class="col-md-12">
                                            <br />
                                            <div class="material-datatables">
                                                <table id="AttachmentDatatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" style="width:100%">
                                                    <thead>
                                                        <tr>
                                                            <th>@Resources.General.AttachmentName</th>
                                                            <th>@Resources.General.AttachmentType</th>
                                                            <th>@Resources.General.AttachmentSize</th>
                                                            <th class="disabled-sorting">@Resources.General.Actions</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model.FollowUpProjectPlan.FollowUpProjectPlanAttachments)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    <a class="btn btn-link btn-default" href="@Url.Action("DownloadFollowUpProjectPlanAttachments", new { id = item.AttachmentID })">
                                                                        <i class="material-icons">attach_file</i>
                                                                        @item.Name
                                                                    </a>
                                                                </td>
                                                                <td>@item.Type</td>
                                                                <td>@item.Size Bytes</td>
                                                                <td class="text-right">
                                                                    <a class="btn btn-link btn-rose btn-just-icon" href="@Url.Action("DownloadFollowUpProjectPlanAttachments", new { id = item.AttachmentID })">
                                                                        <i class="material-icons">get_app</i>
                                                                    </a>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-collapse">
                            <div class="card-header" role="tab" id="headingTwo">
                                <h5 class="mb-0">
                                    <a class="collapsed" data-toggle="collapse" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                        @*@Resources.General.FollowUpProjectPlanRequest*@
                                        @Resources.FollowUpProjectPlan.UpdateProjectPlan
                                        <i class="material-icons">keyboard_arrow_down</i>
                                    </a>
                                </h5>
                            </div>
                            <div id="collapseTwo" class="collapse" role="tabpanel" aria-labelledby="headingTwo" data-parent="#accordion">
                                <div class="card-body ">
                                    @using (Html.BeginForm("Edit", "FollowUpProjectPlanRequest", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.HiddenFor(model => model.FollowUpProjectPlanRequest.FollowUpProjectPlanRequestId)
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="row justify-content-center">

                                            <div class="col-lg-12">
                                                <div class="form-group">
                                                    <label for="FollowUpProjectPlanRequest_Notes" class="bmd-label-floating">@Resources.FollowUpProjectPlan.Notes</label>
                                                    @Html.TextAreaFor(model => model.FollowUpProjectPlanRequest.Notes, new { @class = "form-control", @rows = "7", @required = "required", @disabled = "disabled" })
                                                    @Html.ValidationMessageFor(model => model.FollowUpProjectPlanRequest.Notes, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="material-datatables">
                                                    <table id="FPP_AttachmentDatatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" style="width:100%">
                                                        <thead>
                                                            <tr>
                                                                <th>@Resources.General.AttachmentName</th>
                                                                <th>@Resources.General.AttachmentType</th>
                                                                <th>@Resources.General.AttachmentSize</th>
                                                                <th class="disabled-sorting">@Resources.General.Actions</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var item in Model.FollowUpProjectPlanRequest.FollowUpProjectPlanRequestAttachments)
                                                            {
                                                                <tr>
                                                                    <td>
                                                                        <a class="btn btn-link btn-default" href="@Url.Action("DownloadFollowUpProjectPlanRequestAttachments", new { id = item.AttachmentID })">
                                                                            <i class="material-icons">attach_file</i>
                                                                            @item.Name
                                                                        </a>
                                                                    </td>
                                                                    <td>@item.Type</td>
                                                                    <td>@item.Size Bytes</td>
                                                                    <td class="text-right">
                                                                        <a class="btn btn-link btn-rose btn-just-icon" href="@Url.Action("DownloadFollowUpProjectPlanRequestAttachments", new { id = item.AttachmentID })">
                                                                            <i class="material-icons">get_app</i>
                                                                        </a>
                                                                    </td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                            <div class="col-lg-12">
                                                <div class="form-group">
                                                    <label for="FollowUpProjectPlanRequest_FollowUpProjectPlanStatus" class="bmd-label-floating">@Resources.General.Action</label>
                                                    @Html.DropDownListFor(model => model.FollowUpProjectPlanRequest.FollowUpProjectPlanStatus, (SelectList)ViewBag.FollowUpPPStatus, new { @class = "selectpicker form-control", @required = "required", data_style = "select-with-transition", @title = Resources.FollowUpProjectPlan.SelectAction, @id = "Action" })
                                                    @Html.ValidationMessageFor(model => model.FollowUpProjectPlanRequest.FollowUpProjectPlanStatus, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-lg-12">
                                                <div class="form-group">
                                                    <label for="FollowUpProjectPlanRequest_Notes" class="bmd-label-floating">@Resources.IncubationRequest.Feedback</label>
                                                    @Html.TextBoxFor(model => model.FollowUpProjectPlanRequest.feedBack, new { @class = "form-control", @Id = "feadback" })
                                                    @Html.ValidationMessageFor(model => model.FollowUpProjectPlanRequest.feedBack, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <input type="submit" class="btn btn-rose" name="Save" value="@Resources.General.Submit">
                                                    <a class="btn btn-default" href="@Url.Action("index")">@Resources.General.Back</a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@*</div>*@
