@model AlfaPeople.KingKhalidFoundation.Data.Model.BackendUserPosition
@{
    Layout = null;
    //  ViewBag.Title = "Create";
}
@using (Html.BeginForm("Create", "Position", FormMethod.Post, new { onSubmit = "return jQueryAjaxPost(this);", data_restUrl = Url.Action("Index", "Position", new { id = 0 }) }))//data-resetUrl
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label for="NameAR" class="bmd-label-floating">@Resources.Popsations.PositionNameAR</label>

                <div class="col-md-10">
                    @Html.EditorFor(model => model.NameAR, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.NameAR, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="NameEN" class="bmd-label-floating">@Resources.Popsations.PositionNameEN</label>

                <div class="col-md-10">
                    @Html.EditorFor(model => model.NameEN, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.NameEN, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="IsActive" class="bmd-label-floating">@Resources.Popsations.IsActive</label>
                <div class="col-md-10">
                    @Html.CheckBoxFor(model => model.IsActive, new { htmlAttributes = new { @class = "toggle" } })
                </div>
                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-info btn-link">@Resources.General.Add</button>
        <button type="button" class="btn btn-danger btn-link" data-dismiss="modal">@Resources.General.Close</button>
    </div>
}

