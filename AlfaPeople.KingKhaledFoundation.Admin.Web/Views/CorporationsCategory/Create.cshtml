@model AlfaPeople.KingKhalidFoundation.Data.Model.CorporationsCategory

@{
    Layout = null;
    //  ViewBag.Title = "Create";
}


@using (Html.BeginForm("Create", "CorporationsCategory", FormMethod.Post, new { onSubmit = "return jQueryAjaxPost(this);", data_restUrl = Url.Action("Index", "CorporationsCategory", new { id = 0 }) }))//data-resetUrl
{
    @Html.AntiForgeryToken()

    <div class="modal-body">
        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @*@Html.HiddenFor(model => model.RegionID)*@




            <div class="form-group">
                <label for="CorporationsCategoryNameEN" class="bmd-label-floating"> @Resources.CorporationsCategory.CorporationsCategoryNameEN</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CorporationsCategoryNameEN, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.CorporationsCategoryNameEN, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="CorporationsCategoryNameAR" class="bmd-label-floating"> @Resources.CorporationsCategory.CorporationsCategoryNameAR</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CorporationsCategoryNameAR, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.CorporationsCategoryNameAR, "", new { @class = "text-danger" })
                </div>
            </div>
     


            <div class="form-group">
                <label for="IsActive" class="bmd-label-floating"> @Resources.CorporationsCategory.IsActive</label>
                <div class="col-md-10">


                    @Html.CheckBoxFor(model => model.IsActive, new { htmlAttributes = new { @class = "toggle" } })
                </div>

                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })


            </div>

        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-info btn-link">@Resources.General.Add</button>
        <button type="button" class="btn btn-danger btn-link" data-dismiss="modal">@Resources.General.Close</button>
    </div>
}

