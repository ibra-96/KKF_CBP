@model AlfaPeople.KingKhalidFoundation.Data.Model.Governorate

@{

    Layout = null;
}

@using (Html.BeginForm("Create", "Governorates", FormMethod.Post, new { onSubmit = "return jQueryAjaxPost(this);", data_restUrl = Url.Action("Index", "Governorates", new { id = 0 }) }))//data-resetUrl
{

    @Html.AntiForgeryToken()



    <div class="modal-body">
        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                <label class="bmd-label-floating">@Resources.Governorates.Region</label>
                <div class="col-md-10">
                    @Html.DropDownList("RegionID", null, htmlAttributes: new { @class = "form-control selectpicker", @required = "required", data_style = "select-with-transition", @title = Resources.Governorates.SelectRegion })
                    @Html.ValidationMessageFor(model => model.RegionID, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <label for="GovernorateAR" class="bmd-label-floating">@Resources.Governorates.GovernorateAR</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.GovernorateAR, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.GovernorateAR, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="GovernorateEN" class="bmd-label-floating">@Resources.Governorates.GovernorateEN</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.GovernorateEN, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.GovernorateEN, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <br />

            <div class="form-group">
                <label for="IsActive" class="bmd-label-floating">@Resources.Governorates.IsActive</label>

                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.IsActive)
                        @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-info btn-link">@Resources.General.Add</button>
        <button type="button" class="btn btn-danger btn-link" data-dismiss="modal">@Resources.General.Close</button>
    </div>
}
