@model List<AlfaPeople.KingKhaledFoundation.Admin.Web.Models.CanceledIncubationInvitationsReportVM>

@{
    ViewBag.Title = @Resources.IncubationAdvertising.Report;
}
<link href="~/Content/chosen.min.css" rel="stylesheet" />
<link href="~/assets/css/FileUploaderStyle.css" rel="stylesheet" />
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card ">
                        <div class="card-header card-header-rose card-header-text">
                           <div class="card-text">
                               <h4 class="card-title">@Resources.IncubationAdvertising.Report</h4>
                          </div>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("CanceledInvitationsView", "IncubationAdvertising", FormMethod.Get, new { @class = "form-inline" }))
                        {
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label for="DateFrom">  @Resources.IncubationWorkshops.FromDate</label>
                                        <input type="date" name="DateFrom" class="form-control" />
                                    </div>
                                </div>

                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label for="DateTo"> @Resources.IncubationWorkshops.ToDate</label>
                                        <input type="date" name="DateTo" class="form-control" />
                                    </div>
                                </div>

                                @*<div class="col-lg-4">
                        <div class="form-group">
                            <label>نوع الاحتضان</label>
                            <select name="IncubationType" class="select-wizard form-control selectpicker" data-live-search="true">
                                <option value="">الكل</option>
                                <option value="Acceleration">احتضان جزئي</option>
                                <option value="Incubation">احتضان كامل</option>
                            </select>
                        </div>
                    </div>*@
                                @Html.DropDownList(
                                  "IncubationType", // اسم القيمة التي سيتم إرسالها إلى الـ Controller
                                  new SelectList(new List<object>
                                  {
                                      new { Value = "", Text = "الكل" },
                                      new { Value = "Acceleration", Text = "احتضان جزئي" },
                                      new { Value = "Incubation", Text = "احتضان كامل" }
                                  }, "Value", "Text"),
                                  new
                                  {
                                      @class = "select-wizard form-control selectpicker",
                                      @data_style = "select-with-transition",
                                      @title = Resources.IncubationAdvertising.AdvertisingType,
                                      @data_live_search = "true"
                                  })

                                <div class="col-lg-12 text-center mt-3">
                                    <input type="submit" class="btn btn-rose" value=@Resources.IncubationWorkshops.ViewReport>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- جدول عرض البيانات -->
    <div class="card-body">
        <div class="material-datatables">
            <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>@Resources.IncubationAdvertising.AdvertisingType</th>
                        <th>@Resources.IncubationAdvertising.AdvertisingName</th>
                        <th>@Resources.IncubationWorkshops.Email</th>
                        <th>@Resources.IncubationWorkshops.OrganizationName</th>
                        <th>@Resources.IncubationWorkshops.InvitationSendingDate</th>
                        <th>@Resources.IncubationWorkshops.CancellationDate</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())  // تأكد من أن `Model` ليس `null` وليس فارغًا
                    {
                        foreach (var item in Model)
                        {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.IncubationType)</td>
                        <td>@Html.DisplayFor(modelItem => item.AdvertisingName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.OrganizationName)</td>
                        <td>@(item.InvitationDate != DateTime.MinValue ? item.InvitationDate.ToString("yyyy/MM/dd HH:mm") : "غير متوفر")</td>
                        <td>@(item.CancellationDate.HasValue ? item.CancellationDate.Value.ToString("yyyy/MM/dd HH:mm") : "غير متوفر")</td>
                      
                    </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">لا توجد بيانات متاحة</td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#datatables').DataTable({
                "ordering": true,
                "searching": true,
                "paging": true,
                "info": true,
                "language": {
                    "search": "بحث:",
                    "lengthMenu": "عرض _MENU_ سجلات لكل صفحة",
                    "info": "عرض _START_ إلى _END_ من أصل _TOTAL_ سجلات",
                    "paginate": {
                        "next": "التالي",
                        "previous": "السابق"
                    }
                }
            });
        });
    </script>
}
