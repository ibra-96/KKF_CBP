@model IEnumerable<AlfaPeople.KingKhalidFoundation.Data.Model.Incubation>

@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}



<!-- Content -->
<div class="content">
    <div class="content">
        <div class="container-fluid">
            <h3>Incubations Requests</h3>
            <br>
            <div class="row">

                @foreach (var item in Model)
                {
                    <div id="@item.IncubationID" class="col-md-3">
                        <div class="card card-product">

                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="#KKF">@item.Name </a>
                                </h4>
                                <div class="card-description">
                                    <table class="table">

                                        <tr>
                                            <td>
                                                @item.BackendUser.UserName
                                            </td>
                                        </tr>

                                        <tr>
                                            <td>
                                                @item.IncubationModel.NameAR
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                @item.Name
                                            </td>
                                        </tr>
                                        <tr>

                                            <td>
                                                @item.ProjectDurationInDays

                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                @item.StartDate
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                @item.EndDate
                                            </td>
                                        </tr>


                                    </table>

                                </div>
                            </div>
                            <!-- <div class="card-footer">
                              <div class="price">
                                <h4>$899/night</h4>
                              </div>
                              <div class="stats">
                                <p class="card-category">
                                  <i class="material-icons">place</i> Barcelona, Spain</p>
                              </div>
                            </div> -->
                        </div>
                    </div>
                }

            </div>

        </div>
    </div>
</div>
<!-- End Content -->
@section Scripts{
    <script>
        var urlParams = new URLSearchParams(window.location.search);
        if (urlParams.has('Type')) {
            if (urlParams.get('Type') == "Incubation") {
                window.onload = function (e) {
                    $('#navItem_Inc_Incubations').addClass('active');
                    $('#Incubation').addClass('show');
                };
            }
            else if (urlParams.get('Type') == "Acceleration") {
                window.onload = function (e) {
                    $('#navItem_Acc_Incubations').addClass('active');
                    $('#Acceleration').addClass('show');
                };
            }
        }
    </script>
}