<!-- Content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card ">
                    <div class="card-header card-header-rose card-header-text">
                        <div class="card-text">
                            <h4 class="card-title"> @Resources.IncubationFollowUpEvaluation.FinalReportsFollowUpEvaluation</h4>
                        </div>
                    </div>
                    <div class="card-body ">
                        @using (Html.BeginForm("Create", "IncubationFollowUpEvaluation", FormMethod.Post, new { @name = "myDropzone", id = "myDropzone", @enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="row justify-content-center">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="col-lg-12">
                                    <button class="btn btn-link btn-info" type="button" id="addLines" name="addLines">
                                        <i class="material-icons col-md-4" style="font-size: 200%;">group_add</i> @Resources.IncubationFollowUpEvaluation.AddFollowUp
                                    </button>
                                    <br />
                                    <div class="form-group">
                                        <div id="new-Lines">
                                            <div>
                                                @foreach (var Lines in Model.LstIFELVM)
                                                {
                                                    Html.RenderPartial(" _LstIncubationFollowUpEvaluationLines", Lines);
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="col-sm-4" style="margin-bottom: 20px;">
                                    <div class="form-group select-wizard">
                                        <select class="select-wizard form-control select2" required data_style="select-with-transition" id="Grant" name="IFEVM.FrontendUserID">
                                            <option value="" selected>@Resources.IncubationFollowUpEvaluation.SelectCorporation </option>
                                            @foreach (var item in (SelectList)ViewBag.CorporationUserID)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        </select>
                                        @Html.ValidationMessageFor(model => model.IFEVM.FrontendUserID, "", new { @class = "text-danger" })
                                    </div>
                                </div>




                                <div class="col-sm-4" style="margin-bottom: 20px;">
                                    <div class="form-group select-wizard">
                                        <select class="select-wizard form-control select2" required data_style="select-with-transition" id="Grant" name="IFEVM.IncubationID">
                                            <option value="" selected>@Resources.IncubationFollowUpEvaluation.SelectProject </option>
                                            @foreach (var item in (SelectList)ViewBag.IncubationID)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        </select>
                                        @Html.ValidationMessageFor(model => model.IFEVM.IncubationID, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-sm-4">
                                    <div class="form-group select-wizard">
                                        @Html.EnumDropDownListFor(model => model.IFEVM.ProjectSuccessRate, new { @class = "select-wizard form-control selectpicker", @required = "required", data_style = "select-with-transition", @id = "ProjectSuccessRate" })
                                        @Html.ValidationMessageFor(model => model.IFEVM.ProjectSuccessRate, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <!--<div class="col-sm-4">-->
                                @*<label style="margin-bottom: 20px;">@Resources.IncubationFollowUpEvaluation.ProjectSuccessRate </label>*@
                                @*<div class="form-group select-wizard">

                                    @Html.EnumDropDownListFor(model => model.IFEVM.ProjectSuccessRate, new { @class = "select-wizard form-control select2", @required = "required", data_style = "select-with-transition", @id = "ProjectSuccessRate" })
                                    @Html.ValidationMessageFor(model => model.IFEVM.ProjectSuccessRate, "", new { @class = "text-danger" })*@
                                @*</div>
