@{
    ViewBag.Title = Resources.General.Consultants;
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<style>

    /* تحديد ارتفاع المودال ليكون متكيفًا مع الشاشة */
    .modal-dialog {
        max-height: 90vh; /* يجعل المودال لا يتجاوز 90% من ارتفاع الشاشة */
        display: flex;
        align-items: center; /* يجعل المودال يظهر في منتصف الشاشة */
    }

    /* تفعيل التمرير العمودي عند الحاجة */
    .modal-content {
        max-height: 90vh; /* يجعل المودال يأخذ 90% من ارتفاع الشاشة */
        overflow-y: auto; /* تمكين التمرير العمودي إذا تجاوز المحتوى الحد */
    }

    /* تفعيل التمرير فقط للمحتوى داخل المودال */
    .modal-body {
        max-height: 70vh; /* تحديد أقصى ارتفاع للمحتوى داخل المودال */
        overflow-y: auto; /* السماح بالتمرير العمودي عند الحاجة */
    }

    .ajs-message.ajs-custome {
        color: white;
        background-color: dimgrey;
        border-color: #31708f;
        text-align: center;
        font-size: medium;
    }

    .ajs-message.ajs-custome2 {
        color: indianred;
        background-color: dimgrey;
        border-color: #31708f;
        text-align: center;
        font-size: medium;
    }
   

   /* .modal-body {
        max-height: 80vh; تحديد ارتفاع أقصى للمودال 
        overflow-y: auto;  إظهار شريط التمرير العمودي إذا تجاوز المحتوى 
    }
*/
    /*CSS لزر الإغلاق*/
    .modal-header .close {
        pointer-events: auto; /* تمكين التفاعل مع زر الإغلاق */
    }
</style>
<!-- Content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- <div class="col-md-10 ml-auto mr-auto"> -->
            <div class="col-md-12">
                <div class="card">

                    <div class="card-body">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar
                                        -->
                            <button class="btn btn-link btn-info btn-just-icon like" data-toggle="modal" data-target="#AddClassificationSectorNonProfit">
                                <i class="material-icons">add</i>
                            </button>
                        </div>
                        <div class="material-datatables">
                            <div id="firstTab">@Html.Action("index")</div>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
        <!-- end row -->
    </div>
</div>
<!-- End Content -->
<!-- Modal Edit ClassificationSectorNonProfit -->
<div class="modal fade" id="EditClassificationSectorNonProfit" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">
                    <i class="material-icons">edit</i> Edit Consultant
                </h4>
            </div>
            <div id="thirdTab">@Html.Action("Edit")</div>
        </div>
    </div>
</div>

<!-- Modal Add ClassificationSectorNonProfit -->
<div class="modal fade" id="AddClassificationSectorNonProfit" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">
                    <i class="material-icons">edit</i> Add Consultant
                </h4>
            </div>
            <div id="secondTab">@Html.Action("Create")</div>
        </div>
    </div>
</div>
<!-- End Modal Add ClassificationSectorNonProfit -->


@section Scripts{

    <script>
        var urlParams = new URLSearchParams(window.location.search);
        if (urlParams.has('Type')) {
            if (urlParams.get('Type') == "Incubation") {
                window.onload = function (e) {
                    $('#navItem_Inc_Consultants').addClass('active');
                    $('#Incubation').addClass('show');
                };
            }
            else if (urlParams.get('Type') == "Acceleration") {
                window.onload = function (e) {
                    $('#navItem_Acc_Consultants').addClass('active');
                    $('#Acceleration').addClass('show');
                };
            }
            else if (urlParams.get('Type') == "Workshop") {
                window.onload = function (e) {
                    $('#navItem_Consultants').addClass('active');
                    $('#Workshop').addClass('show');
                };
            }
        }
    </script>

    <script>
        function resetAllValues() {
            $('#AddClassificationSectorNonProfit').find('input:text').val('');
        }
        $("#togglebutton").click(function () {

            $("#IsActive").prop("checked", true);
        });
        $(function () {
            if ('@Resources.General.lang' == 'ar') {
                $("#datatables").DataTable({
                    "language": {
                        "url": "https://cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Arabic.json"
                    }
                });
            } else {
                $("#datatables").DataTable();
            }
        });
        function jQueryAjaxPost(form) {
            $.validator.unobtrusive.parse(form);
            debugger;
            if ($(form).valid()) {
                var ajaxConfig = {
                    type: 'POST',
                    url: form.action,
                    data: new FormData(form),
                    success: function (response) {
                        if (response.success) {
                            $("#firstTab").html(response.html);
                            // refreshAddNewTab($(form).attr('data-restUrl'), true);
                            if ('@Resources.General.lang' == 'ar') { $("#datatables").DataTable({ "language": { "url": "https://cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Arabic.json" } }); } else { $("#datatables").DataTable(); }
                            alertify.notify(response.message, response.style, 4, function () { console.log('dismissed'); });
                            resetAllValues();
                            $('.modal').modal('hide');
                            // $.notify(response.message, "success");
                            //    if (typeof activatejQueryTable !== 'undefined' && $.isFunction(activatejQueryTable))
                            //        activatejQueryTable();
                        }
                        else {
                            alertify.notify('Error', 'custome2', 4, function () { console.log('dismissed'); });

                        }
                    }
                }
                //if ($(form).attr('enctype') == "multipart/form-data") {
                ajaxConfig["contentType"] = false;
                ajaxConfig["processData"] = false;
                //}
                $.ajax(ajaxConfig);

            }
            return false;
        }
        function Edit(url) {
            $.ajax({
                type: 'GET',
                url: url,
                success: function (response) {
                    $("#thirdTab").html(response);
                    //$('ul.nav.nav-tabs a:eq(1)').html('Edit');
                    //$('ul.nav.nav-tabs a:eq(1)').tab('show');
                }

            });
        }
    </script>

    <script>
        $(document).ready(function () {
            // عند فتح أي مودال، تأكد من ضبط ارتفاعه ليناسب الشاشة
            $('.modal').on('shown.bs.modal', function () {
                var modalDialog = $(this).find('.modal-dialog');
                var windowHeight = $(window).height();

                modalDialog.css({
                    'max-height': windowHeight * 0.9, // المودال يأخذ 90% من ارتفاع الشاشة
                    'overflow-y': 'auto' // تفعيل التمرير عند الحاجة
                });
            });
        });

    </script>
    <script>
       $("#FK_AspUserCreateModel").val('@ViewBag.UserId');
    </script>

}
