        <th>
            @Html.DisplayNameFor(model => model.EnglishQuestion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArabicQuestion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuestionType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnswerType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsVisible)
