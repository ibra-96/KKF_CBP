@model List<AlfaPeople.KingKhaledFoundation.Admin.Web.Models.CanceledWorkshopInvitationsReportVM>

@{
    ViewBag.Title = @Resources.IncubationWorkshops.Report;
}
<link href="~/Content/chosen.min.css" rel="stylesheet" />
<link href="~/assets/css/FileUploaderStyle.css" rel="stylesheet" />

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card ">
                
                        <div class="card-header card-header-rose card-header-text">
                            <div class="card-text">
                                <h4 class="card-title">  @Resources.IncubationWorkshops.Report</h4>
                            </div>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("CanceledWorkshopInvitationsReport", "IncubationWorkshops", FormMethod.Get, new { @class = "form-inline" }))
                            {
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label for="DateFrom">
                                           
                                            @Resources.IncubationWorkshops.FromDate

                                        </label>
                                        <input type="date" name="DateFrom" class="form-control" />
                                    </div>
                                </div>

                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label for="DateTo"> @Resources.IncubationWorkshops.ToDate </label>
                                        <input type="date" name="DateTo" class="form-control" />
                                    </div>
                                </div>

                              

                                <div class="col-lg-12 text-center mt-3">
                                    <input type="submit" class="btn btn-rose" value= @Resources.IncubationWorkshops.ViewReport>
                                </div>
                            </div>
                            }
                        </div>
                    </div>
                </div>
        </div>
    </div>

    <!-- جدول عرض البيانات -->
    <div class="card-body">
        <div class="material-datatables">
            <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th> @Resources.IncubationWorkshops.type</th>
                        <th> @Resources.IncubationWorkshops.WorkshopName</th>
                        <th> @Resources.IncubationWorkshops.Email</th>
                        <th> @Resources.IncubationWorkshops.OrganizationName</th>
                        <th>@Resources.IncubationWorkshops.InvitationSendingDate</th>
                        <th> @Resources.IncubationWorkshops.CancellationDate</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.WorkshopType)</td>
                                <td>@Html.DisplayFor(modelItem => item.WorkshopName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.OrganizationName)</td>
                                <td>@(item.InvitationDate != DateTime.MinValue ? item.InvitationDate.ToString("yyyy/MM/dd HH:mm") : "غير متوفر")</td>
                                <td>@(item.CancellationDate.HasValue ? item.CancellationDate.Value.ToString("yyyy/MM/dd HH:mm") : "غير متوفر")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">لا توجد بيانات متاحة</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#datatables').DataTable({
                "ordering": true,
                "searching": true,
                "paging": true,
                "info": true,
                "language": {
                    "search": "بحث:",
                    "lengthMenu": "عرض _MENU_ سجلات لكل صفحة",
                    "info": "عرض _START_ إلى _END_ من أصل _TOTAL_ سجلات",
                    "paginate": {
                        "next": "التالي",
                        "previous": "السابق"
                    }
                }
            });
        });
    </script>
}
