@section Scripts {

    <script>
        var urlParams = new URLSearchParams(window.location.search);
        if (urlParams.has('Type')) {
            if (urlParams.get('Type') == "Incubation") {
                window.onload = function (e) {
                    $('#navItem_Inc_Incubations').addClass('active');
                    $('#Incubation').addClass('show');
                };
            }
            else if (urlParams.get('Type') == "Acceleration") {
                window.onload = function (e) {
                    $('#navItem_Acc_Incubations').addClass('active');
                    $('#Acceleration').addClass('show');
                };
            }
        }
    </script>

    <!-- CSS Just for File Uploader Style include it in your project -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.1/js/materialize.min.js'></script>
    <script src="~/Scripts/dropzone/dropzone.min.js"></script>
    <!-- Plugin for Fileupload, full documentation here: http://www.jasny.net/bootstrap/javascript/#fileinput -->
    <script src="~/assets/js/plugins/jasny-bootstrap.min.js"></script>
    <!-- Library for adding dinamically elements -->
    <script src="~/assets/js/plugins/arrive.min.js"></script>

    <script>

        $(document).ready(function () {

            //$('#incubation_ProjectDurationInDays').on('input', function (e) {
            //    //$("Inp_ProjectDurationInDays").prop('disabled', true);
            //    alert('test');
            //});
            //$("#incubation_ProjectDurationInDays").change(function () {
            //    alert("Handler for .change() called.");
            //});

            $("#StartDate").datepicker({
                changeYear: true,
                dateFormat: 'yy-mm-dd',
                altFormat: "yy-mm-dd"
            });

            $("#EndDate").datepicker({
                changeYear: true,
                dateFormat: 'yy-mm-dd',
                altFormat: "yy-mm-dd"
            });

            $("#StartDate").datepicker({ dateFormat: 'yy-mm-dd' }).bind("change", function () {
                var minValue = $(this).val();
                if (minValue != '') {
                    minValue = $.datepicker.parseDate("yy-mm-dd", minValue);
                    minValue.setDate(minValue.getDate() + 1);
                    $("#EndDate").datepicker("option", "minDate", minValue);
                }
                var endDateValue = new Date($("#EndDate").val());
                if (endDateValue != '' && minValue != '') {
                    var diffTime = diffTime = Math.abs(endDateValue.getTime() - minValue.getTime());
                    var result = Math.ceil(diffTime / (1000 * 60 * 60 * 24)) + 1;
                    $("#incubation_ProjectDurationInDays").val(result);
                } else { $("#incubation_ProjectDurationInDays").val(''); }
            });

            $("#EndDate").datepicker({ dateFormat: 'yy-mm-dd' }).bind("change", function () {
                var endDateValue = new Date($(this).val());
                var startDateValue = new Date($("#StartDate").val());
                var diffTime = diffTime = Math.abs(endDateValue.getTime() - startDateValue.getTime());
                var result = Math.ceil(diffTime / (1000 * 60 * 60 * 24)) + 1;
                $("#incubation_ProjectDurationInDays").val(result);
            });
        });

        function getFileName() {
            $('#fileText').html('');
            $('#fileText').append($('#selectedFile')[0].files.length + ' Files Selected');
        }

        $("#incubation_IncubationAdID").on('change', function () {
            var selectedIncubationAdID = $("#incubation_IncubationAdID").val();
            var option = '';
            if (selectedIncubationAdID != null && selectedIncubationAdID != '') {
                $.getJSON('@Url.Action("getIncubationAdvertisingAcceptedCorp")', { incubationAdId: selectedIncubationAdID }, function (result) {
                    if (result != null && !jQuery.isEmptyObject(result)) {
                        //$.each(result.IncubationAdModel, function (index, incubationModel) {
                        //    option = option + '<option value="' + incubationModel.Value + '">' + incubationModel.Text + "</option>"
                        //});
                        //$("#incubation_IncubationModelID").html(option).selectpicker('refresh');
                        //option = '';
                        $.each(result.IncubationPP, function (index, incuPP) {
                            option = option + '<option value="' + incuPP.Value + '">' + incuPP.Text + "</option>"
                        });
                        $("#incubation_IncubationProjectProposalID").html(option).selectpicker('refresh');
                    }
                    else {
                        //$('#incubation_IncubationModelID').find('option').remove();
                        $('#incubation_IncubationProjectProposalID').find('option').remove();
                    };
                });
            }
        });

        $("#incubation_IncubationProjectProposalID").on('change', function () {
            var selectedIncubationPPID = $("#incubation_IncubationProjectProposalID").val();
            var selectesIncubAdID = $("#incubation_IncubationAdID").val();
            var option = '';
            if (selectedIncubationPPID != null && selectedIncubationPPID != '') {
                $.getJSON('@Url.Action("getIncubationAdvertisingModel")', { incubationAdId: selectesIncubAdID,incubationPPId: selectedIncubationPPID }, function (result) {
                    if (result != null && !jQuery.isEmptyObject(result)) {
                        $.each(result.IncubationAdModel, function (index, incubationModel) {
                            option = option + '<option value="' + incubationModel.Value + '">' + incubationModel.Text + "</option>"
                        });
                        $("#incubation_IncubationModelID").html(option).selectpicker('refresh');
                        //option = '';
                        //$.each(result.IncubationPP, function (index, incuPP) {
                        //    option = option + '<option value="' + incuPP.Value + '">' + incuPP.Text + "</option>"
                        //});
                        //$("#incubation_IncubationProjectProposalID").html(option).selectpicker('refresh');
                    }
                    else {
                        $('#incubation_IncubationModelID').find('option').remove();
                        //$('#incubation_IncubationProjectProposalID').find('option').remove();
                    };
                });
            }
        });

    </script>
