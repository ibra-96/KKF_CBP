@model IEnumerable<AlfaPeople.KingKhalidFoundation.Data.Model.FollowUpProjectPlan>
@{
    ViewBag.Title = Resources.General.FollowUpProjectPlan;
}
<!-- Content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- <div class="col-md-10 ml-auto mr-auto"> -->
            <div class="col-md-12">
                <div class="card">
                    <!-- <div class="card-header card-header-rose card-header-icon">
                    <div class="card-icon">
                    <i class="material-icons"></i>
                    </div>
                    <h4 class="card-title">AuthorizationAuthority</h4>
                    </div> -->
                    <div class="card-body">
                        <div class="toolbar">

                            <a href="@Url.Action( "Create")" class="btn btn-link btn-info btn-just-icon like">
                                <i class="material-icons">add</i>
                            </a>
                        </div>
                        <div class="material-datatables">
                            <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0"
                                   width="100%" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>
                                            @Resources.FollowUpProjectPlan.Name
                                        </th>
                                        <th>
                                            @Resources.FollowUpProjectPlan.WorkShop
                                        </th>
                                        <th>
                                            @Resources.FollowUpProjectPlan.Deadline
                                        </th>
                                        <th>@Resources.General.Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IncubationWorkshop.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Deadline)
                                            </td>
                                            <td>
                                                <a class="btn btn-link btn-warning btn-just-icon edit" href="@Url.Action("Edit", new { Id = item.FollowUpProjectPlanId})"><i class="material-icons">edit</i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end content-->

@section Scripts{

    <script>
        window.onload = function (e) {
            $('#navItem_FollowUpProjectPlan').addClass('active');
            $('#Workshop').addClass('show');
        };
    </script>

    <script>
        $(function () {
            if ('@Resources.General.lang' == 'ar') {
                $("#datatables").DataTable({
                    "language": {
                        "url": "https://cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Arabic.json"
                    }
                });
            } else {
                $("#datatables").DataTable();
            }
        });
    </script>
}

