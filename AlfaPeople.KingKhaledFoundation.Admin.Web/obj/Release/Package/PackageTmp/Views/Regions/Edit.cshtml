@model AlfaPeople.KingKhalidFoundation.Data.Model.Region

@{
    Layout = null;
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit", "Regions", FormMethod.Post, new { onSubmit = "return jQueryAjaxPost(this);", data_restUrl = Url.Action("Index", "Regions", new { id = 0 }) }))//data-resetUrl
{
    @Html.AntiForgeryToken()

    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.RegionID)
            <div class="form-group">
                <label for="RegionNameAR" class="bmd-label-floating">@Resources.Regions.RegionNameAR</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.RegionNameAR, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.RegionNameAR, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="RegionNameEN" class="bmd-label-floating">@Resources.Regions.RegionNameEN</label>

                <div class="col-md-10">
                    @Html.EditorFor(model => model.RegionNameEN, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.RegionNameEN, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="IsActive" class="bmd-label-floating">@Resources.Regions.IsActive</label>
                <div class="col-md-10">
                    @Html.CheckBoxFor(model => model.IsActive, new { htmlAttributes = new { @class = "toggle" } })
                </div>

                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
            </div>
        </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-info btn-link">@Resources.General.Edit</button>
            <button type="button" class="btn btn-danger btn-link" data-dismiss="modal">@Resources.General.Close</button>
        </div>
}

