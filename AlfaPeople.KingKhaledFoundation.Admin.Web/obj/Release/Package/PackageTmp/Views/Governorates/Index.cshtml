@model IEnumerable<AlfaPeople.KingKhalidFoundation.Data.Model.Governorate>
@{

    ViewBag.Title = "Governorate";
    Layout = null;
}

<table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0"
       width="100%" style="width:100%">
    <thead>
        <tr>
            <th>

                @*@Html.DisplayNameFor(model => model.Region.RegionNameEN)*@
                @Resources.Governorates.Region
            </th>
            <th>
                @Resources.Governorates.Governorate
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.GovernorateAR)
                </th>*@
            <th>
               @Resources.Governorates.IsActive
            </th>

            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @if (ViewBag.lang == 3)
                    {
                        @Html.DisplayFor(modelItem => item.Region.RegionNameAR)

                    }
                    else
                    {

                        @Html.DisplayFor(modelItem => item.Region.RegionNameEN)
                    }
                </td>
                <td>
                    @if (ViewBag.lang == 3)
                    {
                        @Html.DisplayFor(modelItem => item.GovernorateAR)

                    }
                    else
                    {

                        @Html.DisplayFor(modelItem => item.GovernorateEN)
                    }
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.GovernorateAR)
                    </td>*@
                <td>


                    @if (item.IsActive == true)
                    {
                        <span class="badge badge-pill badge-success">
                            @Resources.Governorates.Active
                        </span>

                    }
                    else
                    {
                        <span class="badge badge-pill badge-danger">
                            @Resources.Governorates.InActive
                        </span>

                    }

                </td>

                <td>

                    <a class="btn btn-link btn-warning btn-just-icon edit" data-toggle="modal" data-target="#EditClassificationSectorNonProfit" onclick="Edit('@Url.Action("Edit", "Governorates", new { id=@item.GovernorateID})')"><i class="material-icons">edit</i></a>

                </td>
            </tr>
        }
    </tbody>
</table>
