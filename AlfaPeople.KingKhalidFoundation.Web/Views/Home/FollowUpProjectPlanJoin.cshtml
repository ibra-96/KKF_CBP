@model AlfaPeople.KingKhalidFoundation.Web.Models.FollowUpProjectPlanJoinVM
<link href="~/assets/css/FileUploaderStyle.css" rel="stylesheet" />
@{
    ViewBag.title = Resources.General.FollowUpProjectPlan;
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<style>
    .ajs-message.ajs-custome {
        color: white;
        background-color: dimgrey;
        border-color: #31708f;
        text-align: center;
        font-size: medium;
    }

    .ajs-message.ajs-custome2 {
        color: indianred;
        background-color: dimgrey;
        border-color: #31708f;
        text-align: center;
        font-size: medium;
    }

</style>

<!-- Content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="card" @if (Model.FollowUpProjectPlan.IncubationWorkshop.FundingSource.UseCustomThemes) { <text> style="background-image: url('@Model.FollowUpProjectPlan.IncubationWorkshop.FundingSource.GrantBackgroundPic'); background-size: cover; background-repeat: round; background-position: center;" </text> }>
                <div class="card-header card-header-rose card-header-icon">
                    @if (Model.FollowUpProjectPlan.IncubationWorkshop.FundingSource.UseCustomThemes)
                    {
                        <div class="card-icon" style="padding:0px; background: rgba(0, 0, 0, 0); background-color: rgba(0, 0, 0, 0); box-shadow: 0px 0px 0px 0px rgba(0, 0, 0, 0), 0px 0px 0px 0px rgba(0, 0, 0, 0);">
                            <img src="@Model.FollowUpProjectPlan.IncubationWorkshop.FundingSource.GrantHeaderPic" style="width:101%; border-radius: 3px;" />
                        </div>
                    }
                    else
                    {
                        <div class="card-icon">
                            <i class="material-icons">all_inclusive</i>
                        </div>
                    }
                </div>
                <div class="card-body">
                    <div class="content">
                        <br />
                        <div class="row justify-content-center">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label for="FollowUpProjectPlan_Name" class="bmd-label-floating">@Resources.FollowUpProjectPlan.Name</label>
                                    <input type="text" id="Inp_GrantModel" name="FollowUpProjectPlan_Name" value="@Model.FollowUpProjectPlan.Name" class="form-control" disabled="disabled" />
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label for="FollowUpProjectPlan_IncubationWorkshop_Name" class="bmd-label-floating">@Resources.FollowUpProjectPlan.WorkShop</label>
                                    <input type="text" id="Inp_GrantModel" name="FollowUpProjectPlan_IncubationWorkshop_Name" value="@Model.FollowUpProjectPlan.IncubationWorkshop.Name" class="form-control" disabled="disabled" />

                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label for="FollowUpProjectPlan_Deadline"> @Resources.FollowUpProjectPlan.Deadline </label>
                                    <input type="text" id="Inp_GrantModel" name="FollowUpProjectPlan_Deadline" value="@Model.FollowUpProjectPlan.Deadline.ToString("yyyy/MM/dd")" class="form-control" disabled />
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="Notes" class="bmd-label-floating">@Resources.FollowUpProjectPlan.Notes</label>
                                    <textarea id="Inp_Notes" name="FollowUpProjectPlan_Notes" class="form-control" rows="3" disabled>@Model.FollowUpProjectPlan.Notes</textarea>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row justify-content-center">
                            <div class="col-md-12">
                                <br />
                                <div class="material-datatables">
                                    <table id="AttachmentDatatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>@Resources.General.AttachmentName</th>
                                                <th>@Resources.General.AttachmentType</th>
                                                <th>@Resources.General.AttachmentSize</th>
                                                <th class="disabled-sorting">@Resources.General.Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.FollowUpProjectPlan.FollowUpProjectPlanAttachments)
                                            {
                                                <tr>
                                                    <td>
                                                        <a class="btn btn-link btn-default" href="@Url.Action("DownloadFollowUpProjectPlanAttachments", new { id = item.AttachmentID })">
                                                            <i class="material-icons">attach_file</i>
                                                            @item.Name
                                                        </a>
                                                    </td>
                                                    <td>@item.Type</td>
                                                    <td>@item.Size Bytes</td>
                                                    <td class="text-right">
                                                        <a class="btn btn-link btn-rose btn-just-icon" href="@Url.Action("DownloadFollowUpProjectPlanAttachments", new { id = item.AttachmentID })">
                                                            <i class="material-icons">get_app</i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <hr style="width: 100%; border: 1px double #e1b228; border-radius: 100%;" />
                    <br />
                    <br />

                    <div class="content">
                        @using (Html.BeginForm("FollowUpProjectPlanJoin", "Home", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.FollowUpProjectPlan.FollowUpProjectPlanId)
                            @Html.HiddenFor(model => model.FollowUpProjectPlanRequest.FollowUpProjectPlanRequestId)
                            @Html.HiddenFor(model => model.FollowUpProjectPlan.IncubationWorkshop.FundingSourceID)
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row justify-content-center">
                             
                                <div class="col-sm-4"></div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="FollowUpProjectPlanRequest_Notes" class="bmd-label-floating">@Resources.FollowUpProjectPlan.Notes</label>
                                        @Html.TextAreaFor(model => model.FollowUpProjectPlanRequest.Notes, new { @class = "form-control", @rows = "7" })
                                        @Html.ValidationMessageFor(model => model.FollowUpProjectPlanRequest.Notes, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-lg-12" style="margin-top: 77px; margin-bottom: 77px;">
                                    <!-- Uploader Dropzone -->
                                    <div id="zdrop" class="fileuploader" onclick="document.getElementById('selectedFile').click();">
                                        <div id="upload-label" style="width: 350px;">
                                            <i class="material-icons">cloud_upload</i>
                                            <span class="title">@Resources.General.Attachments</span>
                                            <span id="fileText" style="display: block;"></span>
                                            @Html.TextBoxFor(model => model.files, "", new { @id = "selectedFile", @type = "file", @multiple = "multiple", @style = "display: none;", @onchange = "getFileName();" })
                                            @Html.ValidationMessageFor(model => model.files, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                @if (Model.FollowUpProjectPlanRequest.FollowUpProjectPlanRequestAttachments.Count > 0)
                                {
                                    <div class="col-md-12">
                                        <div class="material-datatables">
                                            <table id="FPP_AttachmentDatatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th>@Resources.General.AttachmentName</th>
                                                        <th>@Resources.General.AttachmentType</th>
                                                        <th>@Resources.General.AttachmentSize</th>
                                                        <th class="disabled-sorting">@Resources.General.Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.FollowUpProjectPlanRequest.FollowUpProjectPlanRequestAttachments)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <a class="btn btn-link btn-default" href="@Url.Action("DownloadFollowUpProjectPlanRequestAttachments", new { id = item.AttachmentID })">
                                                                    <i class="material-icons">attach_file</i>
                                                                    @item.Name
                                                                </a>
                                                            </td>
                                                            <td>@item.Type</td>
                                                            <td>@item.Size Bytes</td>
                                                            <td class="text-right">
                                                                <a class="btn btn-link btn-rose btn-just-icon" href="@Url.Action("DownloadFollowUpProjectPlanRequestAttachments", new { id = item.AttachmentID })">
                                                                    <i class="material-icons">get_app</i>
                                                                </a>
                                                                <button class="btn btn-link btn-danger btn-just-icon remove" type="button" onclick="Delete('@item.AttachmentID')">
                                                                    <i class="material-icons">delete</i>
                                                                </button>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                }
                                <div class="row" style="margin-top: 47px;">
                                    <div class="col-lg-12">
                                        <input type="submit" class="btn btn-rose" name="Save" value="@Resources.General.Submit">
                                        <a class="btn btn-default" href="@Url.Action("dashboard")">@Resources.General.Back</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Content -->

@section scripts
{
    <script>
        $(document).ready(function () {
            if ('@Resources.General.lang' == 'ar') {
                $('#AttachmentDatatables').DataTable({
                    "paging": true,
                    "searching": true,
                    "info": true,
                    "pagingType": "full_numbers",
                    "lengthMenu": [
                        [5, 10, 25, 50, -1],
                        [5, 10, 25, 50, "All"]
                    ],
                    responsive: true,
                    "language": {
                        "url": "https://cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Arabic.json"
                    }
                });

                var table = $('#FPP_AttachmentDatatables').DataTable({
                    "paging": true,
                    "searching": true,
                    "info": true,
                    "pagingType": "full_numbers",
                    "lengthMenu": [
                        [5, 10, 25, 50, -1],
                        [5, 10, 25, 50, "All"]
                    ],
                    responsive: true,
                    "language": {
                        "url": "https://cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Arabic.json"
                    }
                });
            } else {
                $('#AttachmentDatatables').DataTable({
                    "paging": true,
                    "searching": true,
                    "info": true,
                    "pagingType": "full_numbers",
                    "lengthMenu": [
                        [5, 10, 25, 50, -1],
                        [5, 10, 25, 50, "All"]
                    ],
                    responsive: true,
                    language: {
                        search: "_INPUT_",
                        searchPlaceholder: "Search records",
                    }
                });

                var table = $('#FPP_AttachmentDatatables').DataTable({
                    "paging": true,
                    "searching": true,
                    "info": true,
                    "pagingType": "full_numbers",
                    "lengthMenu": [
                        [5, 10, 25, 50, -1],
                        [5, 10, 25, 50, "All"]
                    ],
                    responsive: true,
                    language: {
                        search: "_INPUT_",
                        searchPlaceholder: "Search records",
                    }
                });
            }

            // Delete a record
            table.on('click', '.remove', function (e) {
                $tr = $(this).closest('tr');
                table.row($tr).remove().draw();
                e.preventDefault();
                console.log(table.rows().data().length);
            });

        });

        function Delete(Id) {
                swal({
                    title: 'Are you sure?',
                    text: 'You will not be able to recover this file!',
                    type: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, delete it!',
                    cancelButtonText: 'No, keep it',
                    confirmButtonClass: "btn btn-success",
                    cancelButtonClass: "btn btn-danger",
                    buttonsStyling: false
                }).then(function () {

                    $.getJSON('@Url.Action("DeleteFollowUpPlanRequestAttachment")', { Id: Id }, function (Result) {
                        if (Result != null && !jQuery.isEmptyObject(Result)) {
                            if (Result === "Deleted Succsesfully") {
                                swal({
                                    title: 'Deleted!',
                                    text: 'Your imaginary file has been deleted.',
                                    type: 'success',
                                    confirmButtonClass: "btn btn-success",
                                    buttonsStyling: false
                                }).catch(swal.noop)
                            } else {
                                swal({
                                    title: 'Failed',
                                    text: 'failed to delete your imaginary file :)',
                                    type: 'error',
                                    confirmButtonClass: "btn btn-danger",
                                    buttonsStyling: false
                                }).catch(swal.noop)
                            }
                        }
                    });

                }, function (dismiss) {
                    // dismiss can be 'overlay', 'cancel', 'close', 'esc', 'timer'
                    if (dismiss === 'cancel') {
                        swal({
                            title: 'Cancelled',
                            text: 'Your imaginary file is safe :)',
                            type: 'error',
                            confirmButtonClass: "btn btn-info",
                            buttonsStyling: false
                        }).catch(swal.noop)
                    }
                })
        }
    </script>

    <script>
        $(document).ready(function () {
            var Msg = '@ViewBag.Msg';
            if (Msg != '') {
                console.log(Msg);
                md.showNotification('top', '@Resources.General.MsgTextAlign', 'notification_important', 'rose', '3e3', '<h4 class="info-text" style="text-align:@Resources.General.TextAlign;"> ' + Msg + ' </h4>')
            }
        });

        function getFileName() {
            $('#fileText').html('');
            $('#fileText').append($('#selectedFile')[0].files.length + ' Files Selected');
        }
    </script>
}