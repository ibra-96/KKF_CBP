@model AlfaPeople.KingKhalidFoundation.Web.Models.CustomForgotPasswordVM
@{
    ViewBag.Title = Resources.General.ForgetMyPass;
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container" style="direction: ltr;">
    <div class="row">
        <div class="col-md-10 ml-auto mr-auto">
            <!--      Wizard container        -->
            <div class="wizard-container">
                <div class="card" data-color="rose">
                    @using (Html.BeginForm("ForgotPasswordStepTwo", "Account", new { partner = Request.QueryString["partner"] }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.imgSrc)
                        @Html.HiddenFor(model => model.CorpName)
                        <div class="card-header text-center">
                            <h3 class="card-title">
                                @Resources.General.ForgetMyPass
                            </h3>
                            <h5 class="card-description">
                                @Resources.General.ForgetMyPassDesc
                            </h5>
                        </div>
                        <hr style="border: double 3px #c0a979; border-radius: 100%;" />
                        <div class="card-body">
                            <div class="tab-content" style="min-height: 100%;">
                                <div class="tab-pane active" id="VerifyYourEmail">
                                    <div class="row justify-content-center" style="align-items: center;">
                                        <div class="col-lg-4">
                                            <div class="fileinput fileinput-new text-center">
                                                <div class="fileinput-new thumbnail">
                                                    @if (!string.IsNullOrWhiteSpace(Model.imgSrc))
                                                    {
                                                        <img id="CorpImg" src="@Model.imgSrc" />
                                                    }
                                                    else
                                                    {
                                                        <img id="CorpImg" src="~/assets/img/default-avatar.png" />
                                                    }
                                                </div>
                                                <h3 id="CorpName" class="title">@Model.CorpName</h3>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <h5 class="info-text"> @Resources.General.Last4CorpRegNum</h5>
                                            <div class="form-group">
                                                <label for="CorpRegNum" class="bmd-label-floating">@Resources.CorporationProfile.CorporationRegistrationNumber</label>
                                                @Html.TextBoxFor(model => model.CorpRegNum, new { @class = "form-control", @required = "required", @maxlength = 20, @size = 20 })
                                                @Html.ValidationMessageFor(model => model.CorpRegNum)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="mr-auto">
                                <a href="@Url.Action("ForgotPasswordStepOne")">@Resources.General.NotYou</a>
                            </div>
                            <div class="ml-auto">
                                <input type="submit" class="btn btn-finish btn-fill btn-rose btn-wd" value="@Resources.General.Next">
                            </div>
                        </div>
                    }
                </div>
            </div>
            <!-- wizard container -->
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            var Msg = '@ViewBag.Msg';
            if (Msg != '') {
                md.showNotification('top', '@Resources.General.MsgTextAlign', 'notification_important', 'danger', '3e3', '<h4 class="info-text" style="text-align:@Resources.General.TextAlign;"> ' + Msg + ' </h4>')
            }
        });
    </script>
}