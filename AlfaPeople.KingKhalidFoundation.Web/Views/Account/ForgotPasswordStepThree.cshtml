@{
    ViewBag.Title = Resources.General.ForgetMyPass;
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container" style="direction: ltr;">
    <div class="row">
        <div class="col-md-10 ml-auto mr-auto">
            <!--      Wizard container        -->
            <div class="wizard-container">
                <div class="card" data-color="rose">
                    <div class="card-header text-center">
                        <h3 class="card-title">
                            @Resources.General.ForgetMyPass
                        </h3>
                        <h5 class="card-description">
                            @Resources.General.ForgetMyPassDesc
                        </h5>
                    </div>
                    <hr style="border: double 3px #c0a979; border-radius: 100%;" />
                    <div class="card-body">
                        <div class="tab-content" style="min-height: 100%;">
                            <div class="tab-pane active" id="SecurityCode">
                                <div id="SecurityCode1" class="row justify-content-center" style="align-items: center;">
                                    <i class="material-icons" style="font-size: 70px;color: forestgreen;">done_all</i>
                                    <div class="col-lg-12">
                                        <h4 class="title" style="color: forestgreen; text-align: center;"> @Resources.General.FindEmailFinish </h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="ml-auto">
                                @if (!string.IsNullOrWhiteSpace(Request.QueryString["partner"]))
                                {
                                    <a href="@Url.Action("login", new { partner = Request.QueryString["partner"] })" class="btn btn-finish btn-fill btn-rose btn-wd">@Resources.General.Finish</a>
                                }
                                else
                                {
                                    <a href="@Url.Action("login")" class="btn btn-finish btn-fill btn-rose btn-wd">@Resources.General.Finish</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <!-- wizard container -->
            </div>
        </div>
    </div>
</div>
