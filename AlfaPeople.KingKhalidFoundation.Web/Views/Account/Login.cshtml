@using AlfaPeople.KingKhalidFoundation.Web.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-6 mr-auto">
            <div class="card card-login card-hidden">
                <div class="card-header card-header-rose text-center">
                    <h4 class="card-title">@Resources.General.LogIn</h4>
                </div>
                <div class="card-body ">
                    @using (Html.BeginForm("Login", "Account", new { partner = Request.QueryString["partner"], ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <span class="bmd-form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="material-icons">face</i>
                                    </span>
                                </div>
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = Resources.General.Username, @required = "true" })
                            </div>
                        </span>
                        <span class="bmd-form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="material-icons">lock_outline</i>
                                    </span>
                                </div>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = Resources.General.Password, @required = "true" })
                            </div>
                        </span>
                        <div class="card-footer justify-content-center">
                            <button type="submit" class="btn btn-rose btn-link btn-lg">@Resources.General.btnLogIn </button>
                        </div>
                    }
                    @if (!string.IsNullOrWhiteSpace(Request.QueryString["partner"]))
                    {
                        <a href="@Url.Action("ForgotPasswordStepOne", new { partner = Request.QueryString["partner"] })" class="float-right">@Resources.General.ForgetMyPass</a>
                    }
                    else
                    {
                        <a href="@Url.Action("ForgotPasswordStepOne")" class="float-right">@Resources.General.ForgetMyPass</a>
                    }
                    <br />
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            setFormValidation('#LoginValidation');
        });

        // Reload page if user navigated via browser's back/forward
        if (window.performance && performance.getEntriesByType("navigation")[0]?.type === "back_forward") {
            window.location.reload(true);
        }
    </script>

    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
}