@model AlfaPeople.KingKhalidFoundation.Web.Models.RegisterVM

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container">
    <div class="col-lg-4 col-md-6 col-sm-6 mr-auto">
        <div class="card card-login card-hidden">
            <div class="card-header card-header-rose text-center">
                <h4 class="card-title">@Resources.General.Register</h4>
            </div>
            <div class="card-body ">
                @using (Html.BeginForm("register", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group has-default">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="material-icons">face</i>
                                </span>
                            </div>
                            @Html.TextBoxFor(f => f.Username, "", new { @class = "form-control", @placeholder = Resources.General.Username, @required = "required", @onfocusout = "this.value = $.trim(this.value);" })
                            <div class="input-group">
                                @Html.ValidationMessageFor(f => f.Username)
                            </div>
                        </div>
                    </div>
                    <div class="form-group has-default">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="material-icons">mail</i>
                                </span>
                            </div>
                            @Html.TextBoxFor(f => f._RegisterViewModel.Email, "", new { @class = "form-control", @placeholder = Resources.General.Email, @required = "required", @email = "true" })
                            <div class="input-group">
                                @Html.ValidationMessageFor(f => f._RegisterViewModel.Email)
                            </div>
                        </div>
                    </div>
                    <div class="form-group has-default">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="material-icons">lock_outline</i>
                                </span>
                            </div>
                            @Html.TextBoxFor(f => f._RegisterViewModel.Password, "", new { @class = "form-control", @placeholder = Resources.General.Password, @required = "required", @type = "password" })
                            <div class="input-group">
                                @Html.ValidationMessageFor(f => f._RegisterViewModel.Password)
                                @Html.ValidationMessage("Errors")
                            </div>
                        </div>
                    </div>
                    <div class="form-group has-default">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="material-icons">beenhere</i>
                                </span>
                            </div>
                            @Html.TextBoxFor(f => f._RegisterViewModel.ConfirmPassword, "", new { @class = "form-control", @placeholder = Resources.General.ConfPass, @type = "password", @equalTo = "#password", @required = "required" })
                            <div class="input-group">
                                @Html.ValidationMessageFor(f => f._RegisterViewModel.ConfirmPassword)
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <input type="submit" class="btn btn-rose btn-round mt-4" value="@Resources.General.btnRegister">
                    </div>
                }
                <br />
                <br />
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            setFormValidation('#RegisterValidation');
        });
    </script>
}