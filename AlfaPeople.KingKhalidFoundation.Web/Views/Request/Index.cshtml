@model AlfaPeople.KingKhalidFoundation.Web.Models.RequestsVM
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    ViewBag.Title = Resources.General.JoinRequests;
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- <div class="col-md-10 ml-auto mr-auto"> -->
            <div class="col-md-12">
                <div class="card">

                    <div class="card-body">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar        -->
                        </div>
                        <div class="material-datatables">
                            <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0"
                                   width="100%" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>
                                            @Resources.FollowUpProjectPlan.ProjectName
                                        </th>
                                        <th>
                                            @Resources.Dashboard.Type
                                        </th>
                                        <th>
                                            @Resources.Events.StartDate
                                        </th>
                                        <th>
                                            @Resources.Events.EndDate
                                        </th>
                                        <th>
                                            @Resources.CorporationRegistered.Status
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.LstIncubation)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @if (ViewBag.lang == 3)
                                                {
                                                    @Html.DisplayFor(modelItem => item.IncubationType.NameAR)
                                                }
                                                else
                                                {
                                                    @Html.DisplayFor(modelItem => item.IncubationType.NameEN)
                                                }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.StartDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EndDate)
                                            </td>
                                            <td>
                                                @if (item.IncubationProjectProposals.FirstOrDefault(f => f.FrontendUser.AspNetUser.UserName == User.Identity.Name).IncubationProjectProposalStatu.NameEN == "Accepted")
                                                {
                                                    <span class="badge badge-pill badge-success">
                                                        @Resources.General.Accepted
                                                    </span>
                                                }
                                                else if (item.IncubationProjectProposals.FirstOrDefault(f => f.FrontendUser.AspNetUser.UserName == User.Identity.Name).IncubationProjectProposalStatu.NameEN == "Rejected")
                                                {
                                                    <span class="badge badge-pill badge-danger">
                                                        @Resources.General.Rejected
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge btn-warning">
                                                        @Resources.General.Pending
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                    }

                                    @* 20-2-2025 *@



                                    @foreach (var invitation in Model.LstCancelledInvitations)
                                    {
                                        <tr>
                                            <td>@invitation.IncubationAdvertising.Name</td>
                                            <td>@(invitation.IncubationAdvertising.IncubationType.NameAR)</td>
                                            <td>@invitation.IncubationAdvertising.StartDate.ToString("yyyy/MM/dd")</td>
                                            <td>@invitation.IncubationAdvertising.EndDate.ToString("yyyy/MM/dd")</td>
                                            <td>
                                                <span class="badge badge-pill badge-danger">  @Resources.Dashboard.Canceled</span>
                                            </td>
                                        </tr>
                                    }
                                    @* 25-2-2025 *@
                                    @* عرض ورش العمل الملغاة *@
                                    @foreach (var workshop in Model.LstCancelledWorkshops)
                                    {
                                <tr>
                                    <td>@workshop.IncubationWorkshop.Name</td>
                                    <td>
                                        @if (ViewBag.lang == 3)
                                        {
                                            @Resources.General.Workshops <TEXT> - </TEXT> @Html.DisplayFor(modelItem => @workshop.IncubationWorkshop.IncubationWorkshopModel.NameAR)
                                        }
                                        else
                                        {
                                            @Resources.General.Workshops <TEXT> - </TEXT> @Html.DisplayFor(modelItem => @workshop.IncubationWorkshop.IncubationWorkshopModel.NameEN)
                                        }
                                    </td>
                                    <td>@workshop.IncubationWorkshop.StartDate.ToString("yyyy/MM/dd")</td>
                                    <td>@workshop.IncubationWorkshop.EndDate.ToString("yyyy/MM/dd")</td>
                                    @*<td>@workshop.CreatedDate.ToString("yyyy-MM-dd")</td>*@
                                    <td><span class="badge badge-danger">  @Resources.Dashboard.Canceled</span></td>
                                </tr>
                                }


                                    @foreach (var item in Model.LstIWorkshop)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @if (ViewBag.lang == 3)
                                                {
                                                    @Resources.General.Workshops <TEXT> - </TEXT> @Html.DisplayFor(modelItem => item.IncubationWorkshopModel.NameAR)
                                                }
                                                else
                                                {
                                                    @Resources.General.Workshops <TEXT> - </TEXT> @Html.DisplayFor(modelItem => item.IncubationWorkshopModel.NameEN)
                                                }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.StartDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EndDate)
                                            </td>
                                            <td>
                                                @if (item.WorkshopProjectProposals.FirstOrDefault().WorkshopProjectProposalStatu.NameEN == "Accepted")
                                                {
                                                    <span class="badge badge-pill badge-success">
                                                        @Resources.General.Accepted
                                                    </span>
                                                }
                                                else if (item.WorkshopProjectProposals.FirstOrDefault().WorkshopProjectProposalStatu.NameEN == "Rejected")
                                                {
                                                    <span class="badge badge-pill badge-danger">
                                                        @Resources.General.Rejected
                                                    </span>

                                                }
                                                else
                                                {
                                                    <span class="badge btn-warning">
                                                        @Resources.General.Pending
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
        <!-- end row -->
    </div>
</div>


<div class="modal fade" id="modalfeadback" role="dialog">
    <div class="modal-dialog" style="max-width:50%">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title">
                    Feadback
                </h3>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <p class="text-center" id="lblFeadback"></p>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script>
        window.onload = function (e) {
            $('#navItem_Request').addClass('active');
        };
    </script>

    <script>
        $(function () {
            if ('@Resources.General.lang' == 'ar') {
                $("#datatables").DataTable({
                    "language": {
                        "url": "https://cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Arabic.json"
                    }
                });
            } else {
                $("#datatables").DataTable();
            }
        });
    </script>

    <script>
        function GetFeadback(lblfeadback) {
            if (lblfeadback == null || lblfeadback == "") {
                $("#lblFeadback").text('No feedback has been taken');
            }
            else {
                $("#lblFeadback").text(lblfeadback);
            }
        }
    </script>
}
